{
  "name": "safesnap",
  "version": "1.0.0",
  "description": "Privacy-first screenshot tool with automatic PII detection",
  "main": "src/background/background.js",
  "scripts": {
    "preinstall": "node scripts/check-package-manager.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/test/integration/**/*.test.js'",
    "test:e2e": "bunx playwright test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "build": "bun run webpack --mode production",
    "build:dev": "bun run webpack --mode development",
    "dev": "bun run webpack --mode development --watch",
    "package": "bun run build && bun run scripts/package.js",
    "generate-icons": "bun run scripts/generate-icons.js",
    "version": "node scripts/bump-version.js"
  },
  "keywords": [
    "chrome-extension",
    "screenshot",
    "pii-protection",
    "privacy",
    "security",
    "open-source",
    "pii-detection",
    "data-protection"
  ],
  "author": "SafeSnap Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/safesnap.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/safesnap/issues"
  },
  "homepage": "https://github.com/yourusername/safesnap#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.251",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js",
      "!src/content/content.js",
      "!src/content/modules/**",
      "!src/popup/popup.js",
      "!src/settings/settings.js",
      "!src/background/background.js",
      "!src/i18n/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 75,
        "statements": 75
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/e2e/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@config/(.*)$": "<rootDir>/config/$1"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": "88"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "log",
            "warn",
            "error",
            "time",
            "timeEnd"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "dependencies": {
    "card-validator": "^10.0.3",
    "libphonenumber-js": "^1.12.33"
  }
}
